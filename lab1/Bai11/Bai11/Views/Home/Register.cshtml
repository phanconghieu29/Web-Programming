@{
    ViewData["Title"] = "Đăng Ký";
}
<form>
    <h1>Đăng Ký</h1>
    <div class="row">
        <div class="col-sm-12 col-md-6 mb-3">
            <input type="text" placeholder="Họ" class="form-control" />
        </div>
        <div class="col-sm-12 col-md-6 mb-3">
            <input type="text" placeholder="Tên" class="form-control" />
        </div>
        <div class="col-12 mb-3">
            <input type="email" placeholder="Email" class="form-control" />
        </div>
        <div class="col-12 mb-3">
            <input type="password" placeholder="Mật khẩu" class="form-control" />
        </div>
        <div class="col-12 mb-3">
            <input type="password" placeholder="Nhập lại mật khẩu" class="form-control" />
        </div>
        <div class="col-12 mb-3">
            <label class="form-label">Ngày sinh</label>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-control">
                        <option>Ngày</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <select class="form-control">
                        <option>Tháng</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <select class="form-control">
                        <option>Năm</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-12">
            <label class="form-label" for="male">
                <input type="radio" class="form-radio" value="1" id="male" />
                Nam
            </label>
            <label class="form-label" for="female">
                <input type="radio" class="form-radio" value="0" id="female" />
                Nữ
            </label>
        </div>
        <button class="btn btn-primary w-100 rounded">Đăng ký</button>
    </div>
</form>