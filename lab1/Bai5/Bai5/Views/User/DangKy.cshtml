@{
    ViewData["Title"] = "Đăng Ký";
}

<form class="bg-light p-3">
    <h1 class="text-center text-uppercase">Đăng ký tài khoản</h1>
    <div class="mb-3">
        <label for="name" class="form-label">Tên khách hàng</label>
        <input type="text" class="form-control" name="name" id="name">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password">
    </div>
    <div class="mb-3">
        <label for="gender" class="form-label">Giới tính:</label>
        <p class="text-center">
            <label for="male">
                <input type="radio" name="gender" id="male" value="1">
                Nam
            </label>
            <label for="female">
                <input type="radio" name="gender" id="female" value="0">
                Nữ
            </label>
            <label for="other">
                <input type="radio" name="gender" id="other" value="2">
                Khác
            </label>
        </p>
    </div>
    <div class="mb-3">
        <label for="job" class="form-label">Nghề nghiệp</label>
        <select name="job" id="job" class="form-control">
            <option value="">Giáo viên</option>
            <option value="">Sinh viên</option>
            <option value="">Khác</option>
        </select>
    </div>
    <p class="text-center">
        <button type="submit" class="btn btn-primary text-uppercase">Đăng ký</button>
    </p>
</form>